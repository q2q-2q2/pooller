<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:pooller="urn:import:pooller.ui"
>
    <g:FormPanel>
        <g:VerticalPanel>
            <g:FlowPanel>
                <pooller:FormLabel text="id: " widget="{idEditor}"/>
                <g:NumberLabel ui:field="idEditor" debugId="idEditor"/>
                <pooller:FormLabel text="created: " widget="{createdEditor}"/>
                <g:DateLabel ui:field="createdEditor"/>
                <g:InlineHyperlink ui:field="openLink" text="Open survive page"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <pooller:FormLabel text="title: " widget="{titleEditor}"/>
                <g:TextBox ui:field="titleEditor"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <pooller:FormLabel text="description: " widget="{descriptionEditor}"/>
                <pooller:editor.RichTextToolbar richText="{descriptionEditor}"/>
                <g:RichTextArea ui:field="descriptionEditor" width="38em" height="10em"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Button ui:field="createBtn" text="Create"/>
                <g:Button ui:field="closeBtn" text="Close"/>
            </g:FlowPanel>
        </g:VerticalPanel>
    </g:FormPanel>
</ui:UiBinder>